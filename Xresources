! Some nice font
xterm*faceName: Terminus
xterm*faceSize: 12

! Every shell is a login shell by default (for inclusion of all necessary env. variables)
xterm*loginshell: true

! Lot of scrollback...
xterm*savelines: 10000

! Hide scrollbar
xterm*ScrollBar: false

! Stop output to terminal from jumping down to bottom of scroll again
xterm*scrollTtyOutput: false

! Zenburn
*foreground: #dcdcdc
*background: #3f3f3f

*color0:  #1E2320
*color1:  #9b8282
*color2:  #60b48a
*color3:  #dfaf8f
*color4:  #506070
*color5:  #dc8cc3
*color6:  #8cd0d3
*color7:  #dcdccc
*color8:  #709080
*color9:  #dca3a3
*color10: #c3bf9f
*color11: #f0dfaf
*color12: #94bff3
*color13: #ec93d3
*color14: #93e0e3
*color15: #ffffff

! Clipboard support
xterm*VT100.Translations: #override \
        Ctrl Shift <Key>V:    insert-selection(CLIPBOARD) \n\
        Ctrl Shift <Key>C:    copy-selection(CLIPBOARD)

